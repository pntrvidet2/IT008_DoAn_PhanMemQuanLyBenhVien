<Window x:Class="DoAn.Windows.AddAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Lịch Hẹn" Height="450" Width="400" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Border Background="White" CornerRadius="25" Margin="15,15,15,0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.2" Direction="-90"/>
        </Border.Effect>
        <StackPanel Margin="25">
            <TextBlock Text="HẸN LỊCH TÁI KHÁM" FontSize="18" FontWeight="Bold" Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Chọn Bệnh Nhân" Foreground="#64748B" FontSize="12" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbPatient" Height="35" DisplayMemberPath="Patient_Name" SelectedValuePath="Patient_ID" Margin="0,0,0,15"/>

            <TextBlock Text="Ngày Hẹn" Foreground="#64748B" FontSize="12" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpDate" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Ghi Chú Dặn Dò" Foreground="#64748B" FontSize="12" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNote" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="10" Margin="0,0,0,20"/>
            <Button Content="LƯU LỊCH HẸN" Height="45" Background="#2E78A6" Foreground="White" FontWeight="Bold" Click="btnSave_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Hủy Bỏ" Margin="0,10,0,0" Background="Transparent" BorderThickness="0" Foreground="#94A3B8" Click="btnCancel_Click"/>
        </StackPanel>
    </Border>
</Window>