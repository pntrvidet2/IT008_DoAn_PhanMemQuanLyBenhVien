<Window x:Class="DoAn.Windows.AddExamFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lập Phiếu Khám" Height="620" Width="450" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterOwner">
    <Border Background="White" CornerRadius="20" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="LẬP PHIẾU KHÁM BỆNH" FontSize="22" FontWeight="Bold" Foreground="#0369A1" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Mã Phiếu: (Tự động)" Foreground="#64748B" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFormID" Height="38" IsEnabled="False" Background="#F1F5F9" Padding="10,0" VerticalContentAlignment="Center">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="#CBD5E1" BorderThickness="1">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <TextBlock Text="Chọn Bệnh nhân" Foreground="#64748B" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cboPatient" Height="38" VerticalContentAlignment="Center" DisplayMemberPath="Patient_Name" SelectedValuePath="Patient_ID"/>

                    <TextBlock Text="Triệu chứng" Foreground="#64748B" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtSymptom" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="10">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="10" BorderBrush="#CBD5E1" BorderThickness="1" Background="White">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <TextBlock Text="Kết luận chuyên môn" Foreground="#64748B" Margin="0,15,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtConclusion" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="10">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="10" BorderBrush="#CBD5E1" BorderThickness="1" Background="White">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="HỦY BỎ" Margin="5" Height="42" Background="#F1F5F9" Foreground="#64748B" Click="Cancel_Click" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#E2E8F0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="LƯU PHIẾU" Grid.Column="1" Margin="5" Height="42" Background="#0369A1" Foreground="White" FontWeight="Bold" Click="Save_Click" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#0284C7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>