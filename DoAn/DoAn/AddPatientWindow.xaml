<Window x:Class="DoAn.Windows.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="THÊM MỚI BỆNH NHÂN" Height="650" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="Margin" Value="5,0,0,5"/>
        </Style>

        <Style x:Key="InputContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="InputIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,10,0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="THÊM BỆNH NHÂN MỚI" FontSize="20" FontWeight="ExtraBold" Foreground="#1F2937"/>
                <Border Height="3" Width="40" Background="#2E78A6" HorizontalAlignment="Left" Margin="2,5,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0" HorizontalAlignment="Left" Width="480">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Mã bệnh nhân" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource InputContainer}">
                                <TextBox x:Name="txtId" IsReadOnly="True" Opacity="0.6"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Họ tên (*)" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource InputContainer}">
                                <TextBox x:Name="txtName"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Giới tính" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource InputContainer}">
                                <ComboBox x:Name="cbGender" BorderThickness="0" Height="33" VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="Nam" IsSelected="True"/>
                                    <ComboBoxItem Content="Nữ"/>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ngày sinh" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource InputContainer}">
                                <DatePicker x:Name="dpDob" BorderThickness="0" Height="33"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Bác sĩ phụ trách" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                            <ComboBox x:Name="cbDoctor" Width="380" Height="35" BorderThickness="0" MaxDropDownHeight="150"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Số điện thoại (*)" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <TextBox x:Name="txtPhone"/>
                    </Border>

                    <TextBlock Text="Số CCCD (*)" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <TextBox x:Name="txtCID"/>
                    </Border>

                    <TextBlock Text="Địa chỉ" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <TextBox x:Name="txtAddress"/>
                    </Border>

                    <TextBlock Text="Chẩn đoán ban đầu / Tình trạng" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}" Height="100">
                        <TextBox x:Name="txtCondition" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" Padding="5"/>
                    </Border>

                    <TextBlock x:Name="txtError" Foreground="#EF4444" Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Thoát" Width="80" Height="35" Click="Cancel_Click" Margin="0,0,10,0" Background="#9CA3AF" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Lưu Thông Tin" Width="130" Height="35" Click="Save_Click" Background="#2E78A6" Foreground="White" BorderThickness="0" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>