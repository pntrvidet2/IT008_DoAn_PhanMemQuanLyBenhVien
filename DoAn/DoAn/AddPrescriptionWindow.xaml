<Window x:Class="DoAn.Windows.AddPrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Đơn Thuốc" Height="500" Width="420" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="RoundedInput" TargetType="TextBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="MainBorder" Background="#F8FAFC" 
                                    BorderBrush="#E2E8F0" BorderThickness="1.5" 
                                    CornerRadius="12"/>

                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter IsHitTestVisible="False" 
                                                  Content="{TemplateBinding SelectionBoxItem}" 
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                  VerticalAlignment="Center"/>

                                <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0" 
                                      Stroke="#64748B" StrokeThickness="2" 
                                      VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>

                            <ToggleButton Background="Transparent" BorderThickness="0" 
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>

                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True">
                                <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                                        CornerRadius="10" MinWidth="{TemplateBinding ActualWidth}" Margin="0,5">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15" CornerRadius="25" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="0"/>
        </Border.Effect>

        <StackPanel Margin="25">
            <TextBlock x:Name="txtTitle" Text="THÊM THUỐC VÀO ĐƠN" FontSize="20" FontWeight="Black" Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <TextBlock Text="Mã Hóa Đơn:" Foreground="#64748B" FontWeight="Bold" Margin="5,0,0,5"/>
            <ComboBox x:Name="cboBill" Style="{StaticResource RoundedComboBox}" Margin="0,0,0,15" DisplayMemberPath="Bill_ID" SelectedValuePath="Bill_ID"/>

            <TextBlock Text="Chọn Thuốc:" Foreground="#64748B" FontWeight="Bold" Margin="5,0,0,5"/>
            <ComboBox x:Name="cboDrug" Style="{StaticResource RoundedComboBox}" Margin="0,0,0,15" DisplayMemberPath="Drug_Name" SelectedValuePath="Drug_ID" SelectionChanged="cboDrug_SelectionChanged"/>

            <TextBlock Text="Số lượng:" Foreground="#64748B" FontWeight="Bold" Margin="5,0,0,5"/>
            <TextBox x:Name="txtQty" Style="{StaticResource RoundedInput}" Margin="0,0,0,20" TextChanged="txtQty_TextChanged"/>

            <Border Background="#F1F5F9" CornerRadius="15" Padding="15" Margin="0,0,0,25">
                <TextBlock x:Name="lblTotal" Text="Thành tiền: 0 VNĐ" FontSize="16" FontWeight="Black" Foreground="#2E78A6" HorizontalAlignment="Center"/>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="LƯU DỮ LIỆU" Background="#2E78A6" Height="45" Margin="0,0,5,0" Style="{StaticResource ModernBtn}" Click="btnSave_Click"/>
                <Button Grid.Column="1" Content="HỦY BỎ" Background="#EF4444" Height="45" Margin="5,0,0,0" Style="{StaticResource ModernBtn}" Click="btnCancel_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>