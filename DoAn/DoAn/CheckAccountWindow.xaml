<Window x:Class="DoAn.CheckAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xác nhận" Height="350" Width="550" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{StaticResource {x:Static SystemParameters.FocusVisualStyleKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" BorderThickness="1.5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15" Background="White" CornerRadius="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Button Content="✕" Click="Back_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="0,15,20,0" Background="Transparent" BorderThickness="0" Foreground="Gray" FontSize="16"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="48" 
                           Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="BẠN ĐÃ CÓ TÀI KHOẢN CHƯA?" FontSize="22" FontWeight="ExtraBold" 
                           Margin="0,0,0,10" Foreground="#2E78A6" FontFamily="Segoe UI Semibold"/>

                <TextBlock Text="Vui lòng chọn để tiếp tục sử dụng hệ thống" FontSize="14" 
                           Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,35"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="ĐÃ CÓ" Click="Login_Click" Width="140" Height="45" 
                            Background="#2E78A6" Foreground="White" BorderBrush="#2E78A6"
                            FontWeight="Bold" FontSize="14" Style="{StaticResource ModernButtonStyle}" Margin="0,0,20,0">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>

                    <Button Content="CHƯA CÓ" Click="Register_Click" Width="140" Height="45" 
                            Background="White" Foreground="#2E78A6" BorderBrush="#2E78A6"
                            FontWeight="Bold" FontSize="14" Style="{StaticResource ModernButtonStyle}">
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>