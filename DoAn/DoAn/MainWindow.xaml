<Window x:Class="DoAn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QUẢN LÝ DỮ LIỆU" WindowStyle="None" ResizeMode="NoResize"
        Height="750" Width="1250" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="MenuBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="12" Margin="5,2">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0F2FE"/>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundedBtn" TargetType="Button">
            <Setter Property="Background" Value="#2E78A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15" CornerRadius="25" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Opacity="0.2"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="White" BorderBrush="#F1F5F9" BorderThickness="0,0,1,0">
                <DockPanel Margin="10">
                    <StackPanel DockPanel.Dock="Top" Margin="0,10,0,10">
                        <Grid Width="85" Height="85" HorizontalAlignment="Center">
                            <Ellipse Stroke="#2E78A6" StrokeThickness="2" Fill="#F8FAFC">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <TextBlock Text="👤" 
                                       FontSize="45" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="#2E78A6"/>

                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="imgAvatarBrush" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>

                        <TextBlock x:Name="txtUsername" 
                                   Text="TÊN NGƯỜI DÙNG" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10,0,10" 
                                   FontWeight="Bold" 
                                   Foreground="#1E293B"
                                   FontSize="15"/>

                        <Separator Background="#F1F5F9" Margin="20,5"/>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Top">
                        <ToggleButton x:Name="btnHome" IsChecked="True" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" Margin="0,0,10,0"/>
                                <TextBlock Text="Tổng Quan"/>
                            </StackPanel>
                        </ToggleButton>
                        <TextBlock Text="HÀNH CHÍNH" FontSize="10" FontWeight="Bold" Foreground="#94A3B8" Margin="20,10,0,5"/>
                        <ToggleButton x:Name="btnPatient" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" Margin="0,0,10,0"/>
                                <TextBlock Text="Bệnh Nhân"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnDrug" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💊" Margin="0,0,10,0"/>
                                <TextBlock Text="Kho Thuốc"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnBill" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" Margin="0,0,10,0"/>
                                <TextBlock Text="Hóa Đơn"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnPrescription" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" Margin="0,0,10,0"/>
                                <TextBlock Text="Đơn Thuốc"/>
                            </StackPanel>
                        </ToggleButton>
                        <TextBlock Text="KIỂM KÊ" FontSize="10" FontWeight="Bold" Foreground="#94A3B8" Margin="20,10,0,5"/>
                        <ToggleButton x:Name="btnMedicalRecord" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📂" Margin="0,0,10,0"/>
                                <TextBlock Text="Hồ Sơ"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnMedicalForm" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" Margin="0,0,10,0"/>
                                <TextBlock Text="Phiếu Khám"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnMonitoring" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📉" Margin="0,0,10,0"/>
                                <TextBlock Text="Theo Dõi"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                    <Button Click="btnLogOut_Click" Background="Transparent" BorderThickness="0" Foreground="#EF4444" Margin="15,0,0,10" DockPanel.Dock="Bottom" HorizontalAlignment="Left">
                        <TextBlock Text="🚪 ĐĂNG XUẤT" FontWeight="Bold"/>
                    </Button>
                </DockPanel>
            </Border>

            <Grid Grid.Column="1" Background="#F8FAFC">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="#2E78A6" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                    <Grid>
                        <TextBlock Text="HỆ THỐNG NHÂN VIÊN NHẬP LIỆU" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button Content="—" Width="46" Height="32" Background="Transparent" Foreground="White" BorderThickness="0" Click="Min_Click" FontSize="14" Cursor="Hand"/>
                            <Button x:Name="btnMax" Content="☐" Width="46" Height="32" Background="Transparent" Foreground="White" BorderThickness="0" Click="Max_Click" FontSize="16" Cursor="Hand"/>
                            <Button Content="✕" Width="46" Height="32" Background="Transparent" Foreground="White" BorderThickness="0" Click="Close_Click" FontSize="14" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E81123"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" Margin="20">
                    <Border x:Name="brdDashboard" Background="White" CornerRadius="20">
                        <UniformGrid Columns="2" Rows="2" Margin="10">
                            <Border Background="#EFF6FF" Margin="10" CornerRadius="20">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="BỆNH NHÂN" HorizontalAlignment="Center" Foreground="#1D4ED8"/>
                                    <TextBlock x:Name="txtStatPatient" Text="0" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1D4ED8"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#ECFDF5" Margin="10" CornerRadius="20">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="LOẠI THUỐC" HorizontalAlignment="Center" Foreground="#047857"/>
                                    <TextBlock x:Name="txtStatDrug" Text="0" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#047857"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#FFF7ED" Margin="10" CornerRadius="20">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="DOANH THU" HorizontalAlignment="Center" Foreground="#C2410C"/>
                                    <TextBlock x:Name="txtStatRevenue" Text="0" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#C2410C"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#F1F5F9" Margin="10" CornerRadius="20">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="GIỜ HỆ THỐNG" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtClock" Text="00:00:00" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </Border>
                    <Border x:Name="gridDataDisplay" Background="White" CornerRadius="20" Visibility="Collapsed">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnAdd" Content="+ Thêm" Style="{StaticResource RoundedBtn}" Width="100" Height="35" Click="btnAdd_Click"/>
                                    <Button x:Name="btnExportExcel" Content="📥 Xuất Excel" Style="{StaticResource RoundedBtn}" Background="#059669" Width="120" Height="35" Margin="5,0" Click="btnExportExcel_Click"/>
                                    <TextBlock x:Name="txtCurrentTabName" Text="DANH SÁCH" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" Foreground="#2E78A6"/>
                                </StackPanel>
                            </Grid>
                            <DataGrid x:Name="dgData" Grid.Row="1" IsReadOnly="True" Background="White" SelectionMode="Single" AutoGenerateColumns="True"/>
                            <StackPanel x:Name="stkFooterActions" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                <Button x:Name="btnUpdate" Content="Sửa" Width="100" Height="38" Style="{StaticResource RoundedBtn}" Margin="0,0,10,0" Click="btnUpdate_Click"/>
                                <Button x:Name="btnDelete" Content="Xóa" Width="100" Height="38" Background="#EF4444" Foreground="White" Style="{StaticResource RoundedBtn}" Click="btnDelete_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>