<Window x:Class="DoAn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HỆ THỐNG QUẢN LÝ DỮ LIỆU" WindowStyle="None" ResizeMode="NoResize"
        Height="720" Width="1200" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        UseLayoutRounding="True" SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="MenuBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="12" Margin="5,2">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EAF2F8"/>
                                <Setter Property="Foreground" Value="#2E78A6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F3F7FB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedBtn" TargetType="Button">
            <Setter Property="Background" Value="#2E78A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#246085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-90" Opacity="0.2" ShadowDepth="2"/>
        </Border.Effect>

        <Border CornerRadius="20" Background="White" ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" BorderBrush="#F1F5F9" BorderThickness="0,0,1,0">
                    <StackPanel Margin="10">
                        <StackPanel HorizontalAlignment="Center" Margin="0,20,0,30">
                            <Grid Cursor="Hand" MouseLeftButtonUp="Avatar_Click">
                                <Ellipse x:Name="elAvatar" Width="100" Height="100" Stroke="#2E78A6" StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="imgAvatarBrush" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="👤" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2E78A6">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=imgAvatarBrush, Path=ImageSource}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Border Width="28" Height="28" Background="#2E78A6" CornerRadius="14" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5">
                                    <TextBlock Text="📷" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,4,0,0"/>
                                </Border>
                            </Grid>
                            <TextBlock x:Name="txtUsernameDisplay" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,12,0,0" Foreground="#1E293B"/>
                            <TextBlock Text="NHÂN VIÊN NHẬP LIỆU" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Separator Margin="15,0,15,15" Background="#F1F5F9"/>

                        <ToggleButton x:Name="btnHome" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" Margin="0,0,12,0"/>
                                <TextBlock Text="Trang Chủ"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnDrug" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💊" Margin="0,0,12,0"/>
                                <TextBlock Text="Danh Mục Thuốc"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnPatient" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" Margin="0,0,12,0"/>
                                <TextBlock Text="Quản Lý Bệnh Nhân"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnBill" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" Margin="0,0,12,0"/>
                                <TextBlock Text="Quản Lý Hóa Đơn"/>
                            </StackPanel>
                        </ToggleButton>
                        <Separator Margin="15,0,0,0" Background="#F1F5F9"/>
                        <Button Click="btnLogOut_Click" Background="Transparent" BorderThickness="0" Foreground="#EF4444" Margin="15,10,0,0" HorizontalAlignment="Left" Cursor="Hand">
                            <TextBlock Text="🚪 ĐĂNG XUẤT" FontWeight="Bold"/>
                        </Button>
                        <Separator Margin="15,10,15,15" Background="#F1F5F9"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Background="#F8FAFC">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#2E78A6" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                        <Grid>
                            <TextBlock Text="HỆ THỐNG NHÂN VIÊN NHẬP LIỆU" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0" Opacity="0.9"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                <Button Content="—" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Min_Click" FontSize="18"/>
                                <Button Content="☐" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Max_Click" FontSize="18"/>
                                <Button Content="✕" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Close_Click" FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="20">
                        <Border x:Name="brdDashboard" Background="White" CornerRadius="15">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="TỔNG QUAN HỆ THỐNG" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

                                <UniformGrid Grid.Row="1" Columns="2" Rows="2">
                                    <Border Background="#E0F2FE" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="TỔNG BỆNH NHÂN" HorizontalAlignment="Center" Foreground="#0369A1" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatPatient" Text="0" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#0369A1"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#DCFCE7" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="TỔNG LOẠI THUỐC" HorizontalAlignment="Center" Foreground="#15803D" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatDrug" Text="0" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#15803D"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#FEF9C3" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="DOANH THU (VNĐ)" HorizontalAlignment="Center" Foreground="#854D0E" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatRevenue" Text="0" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#854D0E"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#F1F5F9" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="GIỜ HỆ THỐNG" HorizontalAlignment="Center" Foreground="#475569" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtClock" Text="00:00:00" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#475569"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </Grid>
                        </Border>

                        <Border x:Name="gridDataDisplay" Background="White" CornerRadius="15" Visibility="Collapsed">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="btnAddDrug" Content="+ Thêm Thuốc" Style="{StaticResource RoundedBtn}" Width="120" Height="38" Margin="0,0,10,0" Click="btnAddDrug_Click"/>
                                        <Button x:Name="btnAddPatient" Content="+ Thêm Bệnh Nhân" Style="{StaticResource RoundedBtn}" Width="140" Height="38" Margin="0,0,10,0" Click="btnAddPatient_Click"/>
                                        <Button x:Name="btnAddBill" Content="+ Thêm Hóa Đơn" Style="{StaticResource RoundedBtn}" Width="130" Height="38" Click="btnAddBill_Click"/>
                                    </StackPanel>

                                    <Border HorizontalAlignment="Right" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12" Padding="10,0" Background="#F8FAFC">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="txtSearch" Width="200" Height="32" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                                            <Button Content="🔍" Background="Transparent" BorderThickness="0" Click="btnSearch_Click" Cursor="Hand"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <DataGrid x:Name="dgData" Grid.Row="1" IsReadOnly="True" Background="White" BorderBrush="#F1F5F9" RowHeight="38" SelectionMode="Single" AutoGenerateColumns="True"/>

                                <StackPanel x:Name="stkFooterActions" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button x:Name="btnUpdate" Content="Cập nhật" Margin="0,0,10,0" Width="90" Height="38" Style="{StaticResource RoundedBtn}" Click="btnUpdate_Click"/>
                                    <Button x:Name="btnDelete" Content="Xóa bỏ" Width="90" Height="38" Background="#EF4444" Foreground="White" Style="{StaticResource RoundedBtn}" Click="btnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>