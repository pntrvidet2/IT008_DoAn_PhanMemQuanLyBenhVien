<Window x:Class="DoAn.MainWindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QUẢN TRỊ HỆ THỐNG" WindowStyle="None" ResizeMode="NoResize"
        Height="720" Width="1200" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="AdminMenuBtn" TargetType="ToggleButton">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="10,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="20,0" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0F2FE"/>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="25" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="2"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#F8FAFC" BorderBrush="#F1F5F9" BorderThickness="0,0,1,0" CornerRadius="25,0,0,25">
                <StackPanel>
                    <StackPanel Margin="0,40,0,30">
                        <Ellipse x:Name="elAvatar" Width="90" Height="90" Stroke="#0369A1" StrokeThickness="2" HorizontalAlignment="Center">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="imgAdminAvatar" Stretch="UniformToFill" ImageSource="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="txtAdminUserName" Text="ADMINISTRATOR" FontSize="16" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                        <TextBlock Text="QUẢN TRỊ VIÊN" FontSize="11" Foreground="#0369A1" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Margin="0,20">
                        <ToggleButton x:Name="btnAdminHome" IsChecked="True" Click="Menu_Click" Style="{StaticResource AdminMenuBtn}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" Margin="0,0,12,0"/>
                                <TextBlock Text="Tổng quan"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnAdminNhanVien" Click="Menu_Click" Style="{StaticResource AdminMenuBtn}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" Margin="0,0,12,0"/>
                                <TextBlock Text="Quản lý Tài khoản"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnAdminBenhAn" Click="Menu_Click" Style="{StaticResource AdminMenuBtn}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📑" Margin="0,0,12,0"/>
                                <TextBlock Text="Danh sách Bệnh nhân"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="btnAdminHoaDon" Click="Menu_Click" Style="{StaticResource AdminMenuBtn}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" Margin="0,0,12,0"/>
                                <TextBlock Text="Danh sách Hóa đơn"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>

                    <Button Click="AdminLogOut_Click" Background="Transparent" BorderThickness="0" Foreground="#EF4444" FontWeight="Bold" Margin="30,40,0,0" HorizontalAlignment="Left" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚪" Margin="0,0,10,0"/>
                            <TextBlock Text="ĐĂNG XUẤT"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="#0369A1" CornerRadius="0,25,0,0" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                    <Grid>
                        <TextBlock Text="BẢNG ĐIỀU KHIỂN HỆ THỐNG" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                            <Button Content="—" Width="46" Height="32" Background="Transparent" 
Foreground="White" BorderThickness="0" Click="Min_Click" 
FontSize="14" Cursor="Hand"/>

                            <Button x:Name="btnMax" Content="☐" Width="46" Height="32" Background="Transparent" 
Foreground="White" BorderThickness="0" Click="Max_Click" 
FontSize="16" Cursor="Hand"/>

                            <Button Content="✕" Width="46" Height="32" Background="Transparent" 
Foreground="White" BorderThickness="0" Click="Close_Click" 
FontSize="14" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E81123"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="25">
                    <Grid x:Name="gridAdminDashboard">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <UniformGrid Grid.Row="1" Columns="4" Height="110" Margin="0,0,0,20">
                            <Border Background="#F0FDFA" Margin="5" CornerRadius="15">
                                <StackPanel VerticalAlignment="Center" Margin="15,0">
                                    <TextBlock Text="👥 Tài khoản"/>
                                    <TextBlock x:Name="txtCountStaff" Text="0" FontSize="28" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#EFF6FF" Margin="5" CornerRadius="15">
                                <StackPanel VerticalAlignment="Center" Margin="15,0">
                                    <TextBlock Text="💰 Doanh thu"/>
                                    <TextBlock x:Name="txtCountRevenue" Text="0" FontSize="24" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#FEFCE8" Margin="5" CornerRadius="15">
                                <StackPanel VerticalAlignment="Center" Margin="15,0">
                                    <TextBlock Text="📑 Bệnh nhân"/>
                                    <TextBlock x:Name="txtCountRecords" Text="0" FontSize="28" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#FDF2F8" Margin="5" CornerRadius="15">
                                <StackPanel VerticalAlignment="Center" Margin="15,0">
                                    <TextBlock Text="🧾 Hóa đơn"/>
                                    <TextBlock x:Name="txtCountBills" Text="0" FontSize="28" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#F8FAFC" CornerRadius="15" Margin="5" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="📋 Hóa đơn mới lập" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <DataGrid x:Name="dgRecentBills" Height="300" IsReadOnly="True" Background="Transparent" BorderThickness="0"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="1" Background="#F1F5F9" CornerRadius="15" Margin="5" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="⚡ Lối tắt quản trị" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Button Content="Xuất báo cáo tổng" Style="{StaticResource ActionBtn}" Background="#0369A1" Click="btnExportReport_Click" Margin="0,5"/>
                                    <TextBlock x:Name="txtClock" Text="00:00:00" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="#0369A1"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid x:Name="gridAdminData" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel x:Name="pnlAccountActions" Orientation="Horizontal">
                                    <Button Content="+ Thêm mới" Click="btnAdminAddNew_Click" Style="{StaticResource ActionBtn}" Background="#10B981" Margin="0,0,10,0"/>
                                    <Button Content="📝 Sửa" Click="btnAdminUpdate_Click" Style="{StaticResource ActionBtn}" Background="#F59E0B" Margin="0,0,10,0"/>
                                    <Button Content="🗑 Xóa" Click="btnDelete_Click" Style="{StaticResource ActionBtn}" Background="#EF4444" Margin="0,0,10,0"/>
                                </StackPanel>
                                <Button Content="📥 Xuất Báo Cáo" Click="btnExportReport_Click" Style="{StaticResource ActionBtn}" Background="#0369A1"/>
                            </StackPanel>
                            <Border HorizontalAlignment="Right" Background="#F1F5F9" CornerRadius="12" Padding="10,0" BorderBrush="#E2E8F0" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="txtAdminSearch" Width="200" Height="32" VerticalContentAlignment="Center" Background="Transparent" BorderThickness="0" Text="Tìm kiếm..."/>
                                    <Button Content="🔍" Background="Transparent" BorderThickness="0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <DataGrid x:Name="dgAdminMain" Grid.Row="1" Background="White" IsReadOnly="True" AutoGenerateColumns="True" RowHeight="35"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>