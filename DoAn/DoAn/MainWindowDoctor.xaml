<Window x:Class="DoAn.MainWindowDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QUẢN TRỊ BÁC SĨ" WindowStyle="None" ResizeMode="NoResize"
        Height="750" Width="1250" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        UseLayoutRounding="True" SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="MenuBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="12" Margin="5,2">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EAF2F8"/>
                                <Setter Property="Foreground" Value="#2E78A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedBtn" TargetType="Button">
            <Setter Property="Background" Value="#2E78A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#246085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-90" Opacity="0.2"/>
        </Border.Effect>

        <Border CornerRadius="20" Background="White" ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" BorderBrush="#F1F5F9" BorderThickness="0,0,1,0">
                    <StackPanel Margin="10">
                        <StackPanel HorizontalAlignment="Center" Margin="0,20,0,30">
                            <Grid>
                                <Ellipse Width="100" Height="100" Stroke="#2E78A6" StrokeThickness="2" Fill="#F8FAFC"/>
                                <TextBlock Text="👨‍⚕️" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock x:Name="txtUsernameDisplay" Text="Bác Sĩ" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,12,0,0" Foreground="#1E293B"/>
                            <TextBlock Text="" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Separator Margin="15,0,15,15" Background="#F1F5F9"/>

                        <StackPanel>
                            <ToggleButton x:Name="btnHome" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45" IsChecked="True">
                                <TextBlock Text="📊 Tổng Quan"/>
                            </ToggleButton>
                            <ToggleButton x:Name="btnMyPatients" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                                <TextBlock Text="👥 Bệnh Nhân Của Tôi"/>
                            </ToggleButton>
                            <ToggleButton x:Name="btnMedicalRecord" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                                <TextBlock Text="📑 Hồ Sơ Bệnh Án"/>
                            </ToggleButton>
                            <ToggleButton x:Name="btnExamForm" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                                <TextBlock Text="📝 Phiếu Khám"/>
                            </ToggleButton>
                            <ToggleButton x:Name="btnMonitoring" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                                <TextBlock Text="📈 Phiếu Theo Dõi"/>
                            </ToggleButton>
                            <ToggleButton x:Name="btnDrugList" Click="Menu_Click" Style="{StaticResource MenuBtn}" Height="45">
                                <TextBlock Text="💊 Danh Mục Thuốc"/>
                            </ToggleButton>
                        </StackPanel>

                        <Button Click="btnLogOut_Click" Background="Transparent" BorderThickness="0" Foreground="#EF4444" Margin="15,50,0,0" HorizontalAlignment="Left" Cursor="Hand">
                            <TextBlock Text="🚪 ĐĂNG XUẤT" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Background="#F8FAFC">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#2E78A6" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                        <Grid>
                            <TextBlock x:Name="txtTitleHeader" Text="BẢNG ĐIỀU KHIỂN BÁC SĨ" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                <Button Content="—" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Min_Click" FontSize="18"/>
                                <Button Content="☐" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Max_Click" FontSize="18"/>
                                <Button Content="✕" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Close_Click" FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="20">
                        <Border x:Name="brdDashboard" Background="White" CornerRadius="15">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="THỐNG KÊ CÔNG VIỆC" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>
                                <UniformGrid Grid.Row="1" Columns="2" Rows="2">
                                    <Border Background="#E0F2FE" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="BỆNH NHÂN ĐANG ĐIỀU TRỊ" HorizontalAlignment="Center" Foreground="#0369A1" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatPatient" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#0369A1"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#F0FDF4" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="BỆNH ÁN ĐÃ LẬP" HorizontalAlignment="Center" Foreground="#15803D" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatRecord" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#15803D"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#FFF7ED" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="THUỐC TRONG DANH MỤC" HorizontalAlignment="Center" Foreground="#C2410C" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatDrug" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#C2410C"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#F1F5F9" Margin="10" CornerRadius="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="GIỜ HỆ THỐNG" HorizontalAlignment="Center" Foreground="#475569" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtClock" Text="00:00:00" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#475569"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </Grid>
                        </Border>

                        <Border x:Name="gridDataDisplay" Background="White" CornerRadius="15" Visibility="Collapsed">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Margin="0,0,0,15">
                                    <Button x:Name="btnAddRecord" Content="+ Tạo Phiếu Mới" Style="{StaticResource RoundedBtn}" Width="150" Height="38" HorizontalAlignment="Left" Click="btnAddRecord_Click"/>

                                    <Border HorizontalAlignment="Right" Background="#F1F5F9" CornerRadius="12" Padding="10,0" BorderBrush="#E2E8F0" BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="txtSearch" Width="200" Height="32" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                                            <Button Content="🔍" Background="Transparent" BorderThickness="0" Click="btnSearch_Click" Cursor="Hand"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <DataGrid x:Name="dgData" Grid.Row="1" IsReadOnly="True" Background="White" 
                                          BorderBrush="#F1F5F9" RowHeight="38" AutoGenerateColumns="True"/>

                                <StackPanel x:Name="stkFooterActions" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button x:Name="btnUpdate" Content="Cập Nhật" Margin="0,0,10,0" Width="100" Height="38" Style="{StaticResource RoundedBtn}" Click="btnUpdate_Click"/>
                                    <Button x:Name="btnDelete" Content="Xóa Bỏ" Width="100" Height="38" Background="#EF4444" Foreground="White" Style="{StaticResource RoundedBtn}" Click="btnDelete_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#DC2626"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>