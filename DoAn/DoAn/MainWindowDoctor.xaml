<Window x:Class="DoAn.MainWindowDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QUẢN TRỊ BÁC SĨ" WindowStyle="None" ResizeMode="NoResize"
        Height="750" Width="1250" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="MenuBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="8,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E78A6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="19">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Direction="-90" Opacity="0.15"/>
        </Border.Effect>

        <Border CornerRadius="30" Background="White" ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
                    <Grid>
                        <StackPanel Margin="10">
                            <StackPanel Margin="0,40,0,30">
                                <Grid HorizontalAlignment="Center">
                                    <Ellipse Width="85" Height="85" Fill="White" Stroke="#2E78A6" StrokeThickness="2.5"/>
                                    <TextBlock Text="👨‍⚕️" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock x:Name="txtUsernameDisplay" Text="Bác Sĩ" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,5" Foreground="#1E293B"/>
                                <TextBlock Text="BÁC SĨ ĐIỀU TRỊ" FontSize="10" Foreground="#2E78A6" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.8"/>
                            </StackPanel>

                            <Separator Background="#E2E8F0" Margin="20,0,20,20"/>

                            <StackPanel>
                                <ToggleButton x:Name="btnHome" Content="📊  Tổng Quan" Click="Menu_Click" Style="{StaticResource MenuBtn}" IsChecked="True"/>
                                <ToggleButton x:Name="btnAppointment" Content="📅  Lịch Hẹn Tái Khám" Click="Menu_Click" Style="{StaticResource MenuBtn}"/>
                                <ToggleButton x:Name="btnMyPatients" Content="👥  Bệnh Nhân" Click="Menu_Click" Style="{StaticResource MenuBtn}"/>
                                <ToggleButton x:Name="btnMedicalRecord" Content="📑  Hồ Sơ Bệnh Án" Click="Menu_Click" Style="{StaticResource MenuBtn}"/>
                                <ToggleButton x:Name="btnExamForm" Content="📝  Phiếu Khám" Click="Menu_Click" Style="{StaticResource MenuBtn}"/>
                                <ToggleButton x:Name="btnMonitoring" Content="📈  Phiếu Theo Dõi" Click="Menu_Click" Style="{StaticResource MenuBtn}"/>
                                <ToggleButton x:Name="btnDrugList" Content="💊  Danh Mục Thuốc" Click="Menu_Click" Style="{StaticResource MenuBtn}"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Click="btnLogOut_Click" VerticalAlignment="Bottom" Margin="25,0,25,40" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚪" Foreground="#EF4444" Margin="0,0,12,0" FontSize="16"/>
                                <TextBlock Text="ĐĂNG XUẤT" Foreground="#EF4444" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="65"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#2E78A6" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                        <Grid Margin="30,0">
                            <TextBlock x:Name="txtTitleHeader" Text="DASHBOARD QUẢN LÝ" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" FontSize="15"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="—" Width="46" Height="32" Background="Transparent" 
Foreground="White" BorderThickness="0" Click="Min_Click" 
FontSize="14" Cursor="Hand"/>

                                <Button x:Name="btnMax" Content="☐" Width="46" Height="32" Background="Transparent" 
Foreground="White" BorderThickness="0" Click="Max_Click" 
FontSize="16" Cursor="Hand"/>

                                <Button Content="✕" Width="46" Height="32" Background="Transparent" 
Foreground="White" BorderThickness="0" Click="Close_Click" 
FontSize="14" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E81123"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Background="#F1F5F9">
                        <Border x:Name="brdDashboard" Margin="25" Background="White" CornerRadius="25">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <UniformGrid Columns="3" Margin="0,0,0,25">
                                    <Border Background="#F0FDF4" Margin="10" CornerRadius="20" BorderBrush="#DCFCE7" BorderThickness="1">
                                        <Border Margin="20">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="BỆNH NHÂN ĐANG ĐIỀU TRỊ" Foreground="#15803D" FontWeight="Bold" FontSize="11"/>
                                                <TextBlock x:Name="txtStatPatient" Text="0" FontSize="45" FontWeight="Bold" Foreground="#15803D" Margin="0,10,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Border>
                                    <Border Background="#F0F9FF" Margin="10" CornerRadius="20" BorderBrush="#E0F2FE" BorderThickness="1">
                                        <Border Margin="20">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="LỊCH HẸN HÔM NAY" Foreground="#0369A1" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock x:Name="txtStatTodayApp" Text="0" FontSize="45" FontWeight="Bold" Foreground="#0369A1" Margin="0,10,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Border>
                                    <Border Background="#F1F5F9" Margin="10" CornerRadius="20" BorderBrush="#E2E8F0" BorderThickness="1">
                                        <Border Margin="20">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="GIỜ HỆ THỐNG" Foreground="#475569" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock x:Name="txtClock" Text="00:00:00" FontSize="35" FontWeight="Bold" Foreground="#475569" Margin="0,10,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Border>
                                </UniformGrid>
                                <Border Grid.Row="1" Background="#F8FAFC" CornerRadius="20" Margin="10">
                                    <Grid Margin="20">
                                        <TextBlock Text="DANH SÁCH TÁI KHÁM TRONG NGÀY" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>
                                        <DataGrid x:Name="dgDashboardApp" Margin="0,35,0,0" AutoGenerateColumns="False" IsReadOnly="True" BorderThickness="0" Background="Transparent" RowHeight="40">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Thời Gian" Binding="{Binding App_Date, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                                                <DataGridTextColumn Header="Bệnh Nhân" Binding="{Binding Patient_Name}" Width="*"/>
                                                <DataGridTextColumn Header="Trạng Thái" Binding="{Binding Status}" Width="120"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <Border x:Name="gridDataDisplay" Margin="25" Background="White" CornerRadius="25" Visibility="Collapsed">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="btnAddRecord" Content="+ THÊM MỚI" Background="#2E78A6" Style="{StaticResource ModernBtn}" Click="btnAddRecord_Click"/>
                                        <Button x:Name="btnExport" Content="📥 XUẤT BÁO CÁO" Background="#10B981" Style="{StaticResource ModernBtn}" Margin="15,0,0,0" Click="btnExport_Click"/>
                                    </StackPanel>
                                    <Border HorizontalAlignment="Right" Background="#F1F5F9" CornerRadius="18" Padding="15,0" Width="250">
                                        <TextBox x:Name="txtSearch" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Height="36"/>
                                    </Border>
                                </Grid>
                                <DataGrid x:Name="dgData" Grid.Row="1" BorderBrush="#F1F5F9" RowHeight="45" IsReadOnly="True" Background="Transparent" AutoGenerateColumns="True"/>
                                <StackPanel x:Name="stkFooterActions" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                    <Button x:Name="btnUpdate" Content="CẬP NHẬT" Background="#F59E0B" Style="{StaticResource ModernBtn}" Margin="0,0,15,0" Width="120" Click="btnUpdate_Click"/>
                                    <Button x:Name="btnDelete" Content="XÓA BỎ" Background="#EF4444" Style="{StaticResource ModernBtn}" Width="120" Click="btnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>