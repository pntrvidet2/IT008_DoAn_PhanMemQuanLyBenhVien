<Window x:Class="DoAn.MainWindowHR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QUẢN LÝ NHÂN SỰ" WindowStyle="None" ResizeMode="NoResize"
        Height="720" Width="1250" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        UseLayoutRounding="True" SnapsToDevicePixels="True">

    <Window.Resources>
        <Style x:Key="HRMenuBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="BdHR" Background="{TemplateBinding Background}" CornerRadius="12" Margin="5,2">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BdHR" Property="Background" Value="#E0F2FE"/>
                                <Setter Property="Foreground" Value="#0369A1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BdHR" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedBtn" TargetType="Button">
            <Setter Property="Background" Value="#2E78A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#246085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-90" Opacity="0.2"/>
        </Border.Effect>

        <Border CornerRadius="20" Background="White" ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" BorderBrush="#F1F5F9" BorderThickness="0,0,1,0">
                    <StackPanel Margin="10">
                        <StackPanel HorizontalAlignment="Center" Margin="0,30,0,30">
                            <Grid Cursor="Hand" MouseLeftButtonUp="Avatar_Click">
                                <Ellipse Width="100" Height="100" Stroke="#2E78A6" StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="imgAvatarBrush" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock x:Name="txtIconUser" Text="👤" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2E78A6"/>
                            </Grid>
                            <TextBlock x:Name="txtHRUserName" Text="HR Admin" FontSize="17" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,0" Foreground="#1E293B"/>
                            <TextBlock Text="Phòng Nhân Sự" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel>
                            <ToggleButton x:Name="btnHRHome" Click="HRMenu_Click" Style="{StaticResource HRMenuBtn}" Height="50">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" Margin="0,0,15,0" FontSize="18"/>
                                    <TextBlock Text="Tổng Quan" FontWeight="Bold"/>
                                </StackPanel>
                            </ToggleButton>
                            <ToggleButton x:Name="btnHRNhanVien" Click="HRMenu_Click" Style="{StaticResource HRMenuBtn}" Height="50">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" Margin="0,0,15,0" FontSize="18"/>
                                    <TextBlock Text="DS Nhân Viên" FontWeight="Bold"/>
                                </StackPanel>
                            </ToggleButton>
                            <ToggleButton x:Name="btnHRBacSi" Click="HRMenu_Click" Style="{StaticResource HRMenuBtn}" Height="50">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍⚕️" Margin="0,0,15,0" FontSize="18"/>
                                    <TextBlock Text="Danh Sách Bác Sĩ" FontWeight="Bold"/>
                                </StackPanel>
                            </ToggleButton>
                            <ToggleButton x:Name="btnHRKhoa" Click="HRMenu_Click" Style="{StaticResource HRMenuBtn}" Height="50">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏥" Margin="0,0,15,0" FontSize="18"/>
                                    <TextBlock Text="Danh Sách Khoa" FontWeight="Bold"/>
                                </StackPanel>
                            </ToggleButton>
                        </StackPanel>

                        <Button Click="HRLogOut_Click" Background="Transparent" BorderThickness="0" Foreground="#EF4444" Margin="0,80,0,0">
                            <TextBlock Text="🚪 ĐĂNG XUẤT" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Background="#F8FAFC">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#2E78A6" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                        <Grid Margin="20,0">
                            <TextBlock Text="QUẢN TRỊ NHÂN SỰ BỆNH VIỆN" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="—" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Min_Click" FontSize="18"/>
                                <Button x:Name="btnMax" Content="☐" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Max_Click" FontSize="18"/>
                                <Button Content="✕" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="Close_Click" FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="20">
                        <Border x:Name="brdDashboard" Background="White" CornerRadius="15">
                            <Grid Margin="25">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="THỐNG KÊ NHÂN SỰ" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,25"/>

                                <UniformGrid Grid.Row="1" Columns="2" Rows="2">
                                    <Border Background="#E0F2FE" Margin="10" CornerRadius="15" BorderBrush="#BAE6FD" BorderThickness="1">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="TỔNG NHÂN VIÊN" HorizontalAlignment="Center" Foreground="#0369A1" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatTotalEmp" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#0369A1" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#F0FDF4" Margin="10" CornerRadius="15" BorderBrush="#DCFCE7" BorderThickness="1">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="ĐỘI NGŨ BÁC SĨ" HorizontalAlignment="Center" Foreground="#15803D" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatDoctors" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#15803D" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#FFF7ED" Margin="10" CornerRadius="15" BorderBrush="#FFEDD5" BorderThickness="1">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="SỐ LƯỢNG KHOA" HorizontalAlignment="Center" Foreground="#C2410C" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtStatDeparts" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#C2410C" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#F1F5F9" Margin="10" CornerRadius="15" BorderBrush="#E2E8F0" BorderThickness="1">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="GIỜ HỆ THỐNG" HorizontalAlignment="Center" Foreground="#475569" FontWeight="Bold"/>
                                            <TextBlock x:Name="txtClock" Text="00:00:00" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#475569" Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </Grid>
                        </Border>

                        <Border x:Name="gridHRData" Background="White" CornerRadius="15" Visibility="Collapsed">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Margin="0,0,0,15">
                                    <Button x:Name="btnHRAddNew" Content="+ Thêm Mới" Style="{StaticResource RoundedBtn}" Width="120" Height="38" HorizontalAlignment="Left" Click="btnHRAddNew_Click"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Border BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12" Padding="10,0" Background="#F8FAFC">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="txtHRSearch" Width="200" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Height="32"/>
                                                <Button Content="🔍" Background="Transparent" BorderThickness="0" Click="btnHRSearch_Click" Cursor="Hand"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <DataGrid x:Name="dgHRMain" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="True" Background="White" BorderBrush="#F1F5F9" RowHeight="38" SelectionMode="Single"/>

                                <StackPanel x:Name="stkHRActions" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button x:Name="btnHRUpdate" Content="Cập Nhật" Width="100" Height="38" Style="{StaticResource RoundedBtn}" Margin="0,0,10,0" Click="btnHRUpdate_Click"/>
                                    <Button x:Name="btnHRDelete" Content="Xóa" Width="100" Height="38" Background="#EF4444" Foreground="White" Style="{StaticResource RoundedBtn}" Click="btnHRDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>