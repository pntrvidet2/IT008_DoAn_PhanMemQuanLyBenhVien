<Window x:Class="DoAn.MainWindowPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HỆ THỐNG BỆNH NHÂN" WindowStyle="None" ResizeMode="NoResize"
        Height="720" Width="1250" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style x:Key="MenuBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="12,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E78A6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Direction="-90" Opacity="0.15"/>
        </Border.Effect>

        <Border CornerRadius="30" Background="White" ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#F8FAFC" BorderBrush="#F1F5F9" BorderThickness="0,0,1,0">
                    <Grid>
                        <StackPanel>
                            <StackPanel Margin="0,45,0,35">
                                <Grid HorizontalAlignment="Center">
                                    <Ellipse Width="85" Height="85" Fill="#F0F9FF" Stroke="#2E78A6" StrokeThickness="1.5"/>
                                    <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <TextBlock x:Name="txtPatientName" Text="Họ tên Bệnh nhân" FontSize="18" FontWeight="Bold" Foreground="#1E293B" HorizontalAlignment="Center" Margin="0,15,0,5"/>
                                <TextBlock Text="BỆNH NHÂN" FontSize="10" Foreground="#2E78A6" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.7"/>
                            </StackPanel>

                            <StackPanel Margin="0,10">
                                <ToggleButton x:Name="btnHome" Click="Menu_Click" Style="{StaticResource MenuBtn}" IsChecked="True">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🏠" FontSize="18" Margin="0,0,15,0"/>
                                        <TextBlock Text="Trang chủ" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ToggleButton>

                                <ToggleButton x:Name="btnBilling" Click="Menu_Click" Style="{StaticResource MenuBtn}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💳" FontSize="18" Margin="0,0,15,0"/>
                                        <TextBlock Text="Thanh toán" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ToggleButton>

                                <ToggleButton x:Name="btnInfo" Click="Menu_Click" Style="{StaticResource MenuBtn}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📑" FontSize="18" Margin="0,0,15,0"/>
                                        <TextBlock Text="Hồ sơ cá nhân" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ToggleButton>
                            </StackPanel>
                        </StackPanel>

                        <Button Click="btnLogOut_Click" VerticalAlignment="Bottom" Margin="25,0,25,40" Height="45" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚪" Foreground="#EF4444" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ĐĂNG XUẤT" Foreground="#EF4444" FontWeight="Bold" VerticalAlignment="Center" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="65"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border  Background="#2E78A6" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                        <Grid Margin="25,0">
                            <TextBlock Text="CỔNG THÔNG TIN BỆNH NHÂN" Foreground="White" VerticalAlignment="Center" FontSize="13" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="—" Width="46" Height="32" Background="Transparent" 
            Foreground="White" BorderThickness="0" Click="Min_Click" 
            FontSize="14" Cursor="Hand"/>

                                <Button x:Name="btnMax" Content="☐" Width="46" Height="32" Background="Transparent" 
            Foreground="White" BorderThickness="0" Click="Max_Click" 
            FontSize="16" Cursor="Hand"/>

                                <Button Content="✕" Width="46" Height="32" Background="Transparent" 
            Foreground="White" BorderThickness="0" Click="Close_Click" 
            FontSize="14" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E81123"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Background="#F1F5F9">
                        <Border x:Name="brdDashboard" Margin="25" Background="White" CornerRadius="25">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Chào mừng quay trở lại!" FontSize="22" FontWeight="Bold" Foreground="#1E293B" Margin="10,0,0,20"/>

                                <UniformGrid Grid.Row="1" Columns="2">
                                    <Border Background="#F0FDF4" Margin="10" CornerRadius="20" BorderBrush="#DCFCE7" BorderThickness="1">
                                        <Border Margin="20">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="HÓA ĐƠN CHỜ" HorizontalAlignment="Center" Foreground="#15803D" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock x:Name="txtStatBill" Text="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#15803D" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Border>

                                    <Border Background="#FFF7ED" Margin="10" CornerRadius="20" BorderBrush="#FFEDD5" BorderThickness="1">
                                        <Border Margin="20">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="TÌNH TRẠNG SỨC KHỎE" HorizontalAlignment="Center" Foreground="#C2410C" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock x:Name="txtStatCondition" Text="Ổn định" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#C2410C" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Border>
                                </UniformGrid>

                                <StackPanel Grid.Row="2" Margin="10,20,10,10">
                                    <Grid>
                                        <TextBlock Text="LỊCH HẸN TÁI KHÁM CỦA BẠN" FontSize="16" FontWeight="Bold" Foreground="#1E293B"/>
                                        <TextBlock x:Name="txtClock" Text="00:00:00" HorizontalAlignment="Right" Foreground="#64748B"/>
                                    </Grid>
                                    <DataGrid x:Name="dgAppointments" Margin="0,15,0,0" Height="220" AutoGenerateColumns="False" IsReadOnly="True" Background="Transparent" BorderThickness="0">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ngày Hẹn" Binding="{Binding App_Date, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                                            <DataGridTextColumn Header="Bác Sĩ" Binding="{Binding DoctorName}" Width="180"/>
                                            <DataGridTextColumn Header="Ghi Chú" Binding="{Binding App_Note}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border x:Name="brdFrameContainer" Visibility="Collapsed" Margin="25" Background="White" CornerRadius="25" ClipToBounds="True">
                            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>