<Window x:Class="DoAn.Pages.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KHÔI PHỤC MẬT KHẨU" Height="320" Width="420"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="20" Background="White" BorderBrush="#0369A1" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="2"/>
        </Border.Effect>

        <StackPanel Margin="30">
            <TextBlock Text="QUÊN MẬT KHẨU" FontSize="22" FontWeight="Bold" 
                       Foreground="#0369A1" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <TextBlock Text="Nhập Email tài khoản (Username)" Foreground="#64748B" 
                       Margin="0,0,0,8" FontWeight="SemiBold"/>

            <TextBox x:Name="txtUsernameEmail" Height="40" VerticalContentAlignment="Center" 
                     Padding="12,0" FontSize="14" Foreground="#1E293B">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="#CBD5E1" 
                                BorderThickness="1" Background="White">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0369A1"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

            <TextBlock x:Name="txtError" Foreground="#EF4444" Margin="0,10,0,0" 
                       TextWrapping="Wrap" FontSize="12" Height="18" FontWeight="Medium"/>

            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="XÁC NHẬN" Click="btnVerify_Click" IsDefault="True" 
                        Grid.Column="0" Margin="0,0,6,0" Height="42" Background="#0369A1" 
                        Foreground="White" FontWeight="Bold" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#0284C7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="HỦY BỎ" Click="btnCancel_Click" 
                        Grid.Column="1" Margin="6,0,0,0" Height="42" Background="#F1F5F9" 
                        Foreground="#64748B" FontWeight="Bold" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#E2E8F0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>