<Window x:Class="DoAn.Pages.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HỆ THỐNG QUẢN LÝ BỆNH VIỆN - ĐĂNG NHẬP"
        Height="450" Width="750"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="20" Background="White" BorderBrush="#2E78A6" BorderThickness="2">
        <Grid>
            <!-- Topbar + Content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= TOP BAR (KÉO FORM + NÚT MIN/CLOSE) ================= -->
            <Border Grid.Row="0"
        Background="Transparent"
        MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="42"/>
                        <ColumnDefinition Width="42"/>
                        <ColumnDefinition Width="42"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="HỆ THỐNG QUẢN LÝ BỆNH VIỆN"
                   VerticalAlignment="Center"
                   Margin="16,0,0,0"
                   Foreground="#6B7280"
                   FontWeight="SemiBold"/>

                    <!-- Minimize -->
                    <Button Grid.Column="1" Content="—"
                FontSize="14"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="BtnMin_Click"/>

                    <!-- Maximize / Restore -->
                    <Button Grid.Column="2" Content="☐"
                FontSize="14"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="BtnMax_Click"/>

                    <!-- Close -->
                    <Button Grid.Column="3" Content="×"
                FontSize="16"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="BtnClose_Click"/>
                </Grid>
            </Border>


            <!-- ================= CONTENT ================= -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left -->
                <Border Grid.Column="0" Background="#2E78A6" CornerRadius="18,0,0,18">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="🏥" FontSize="100" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="HOSPITAL MS" FontSize="28" FontWeight="Bold"
                                   Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Security &amp; Management" Foreground="#ADD8E6" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Right -->
                <StackPanel Grid.Column="1" Margin="40,20">
                    <TextBlock Text="ĐĂNG NHẬP" FontSize="24" FontWeight="Bold"
                               Foreground="#2E78A6" Margin="0,0,0,30"/>

                    <TextBlock Text="Tên đăng nhập" Foreground="#666"/>
                    <Border CornerRadius="10" Background="#F3F4F6" Padding="12,0" Margin="0,5,0,20">
                        <TextBox x:Name="txtUsername"
                                 Height="40"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Mật khẩu" Foreground="#666"/>
                    <Border CornerRadius="10" Background="#F3F4F6" Padding="12,0" Margin="0,5,0,10">
                        <PasswordBox x:Name="txtPassword"
                                      Height="40"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Quên mật khẩu -->
                    <TextBlock Text="Quên mật khẩu?"
                               Foreground="#2563EB"
                               FontSize="13"
                               
                               TextDecorations="Underline"
                               HorizontalAlignment="Right"
                               Cursor="Hand"
                               Margin="0,0,0,20"
                               MouseLeftButtonUp="txtForgotPassword_Click">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextDecorations" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Login -->
                    <Button Content="VÀO HỆ THỐNG"
                            Click="BtnLogin_Click"
                            Height="40"
                            Background="#2E78A6"
                            FontWeight="Bold"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,10"
                            IsDefault="True"/>      

                    <!-- Thoát -->
                    <Button Content="THOÁT "
                            Height="40"
                            Click="BtnCancel_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            Cursor="Hand"/>


                    <!-- Thoát app -->
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
