<Window x:Class="DoAn.Pages.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ĐĂNG NHẬP" Height="480" Width="780"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#2E78A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E5A7D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryBtn" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="20" BorderBrush="#E2E8F0" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#1E293B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" Background="White" BorderBrush="#2E78A6" BorderThickness="1.5" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#F8FAFC" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                <Grid Margin="20,0">
                    <TextBlock Text="HỆ THỐNG QUẢN LÝ BỆNH VIỆN" VerticalAlignment="Center" Foreground="#64748B" FontWeight="Bold" FontSize="11"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Content="—" Width="40" Background="Transparent" BorderThickness="0" Click="BtnMin_Click" Foreground="#64748B" FontSize="16"/>
                        <Button Content="✕" Width="40" Background="Transparent" BorderThickness="0" Click="BtnClose_Click" Foreground="#64748B" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#2E78A6" CornerRadius="0,40,40,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="🏥" FontSize="90" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="HOSPITAL MS" FontSize="26" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Vận hành &amp; Bảo mật" Foreground="#BEE3F8" HorizontalAlignment="Center" FontSize="12" Opacity="0.8" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Margin="40,25">
                    <StackPanel>
                        <TextBlock Text="ĐĂNG NHẬP" FontSize="28" FontWeight="Bold" Foreground="#2E78A6" Margin="0,0,0,5"/>
                        <TextBlock Text="Nhập thông tin tài khoản của bạn" Foreground="#94A3B8" Margin="0,0,0,25" FontSize="13"/>

                        <TextBlock Text="Tên đăng nhập (Email)" Foreground="#475569" FontWeight="SemiBold" FontSize="12" Margin="5,0,0,5"/>
                        <Border CornerRadius="15" Background="#F1F5F9" Padding="15,0" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#E2E8F0">
                            <TextBox x:Name="txtUsername" Height="45" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14"/>
                        </Border>

                        <TextBlock Text="Mật khẩu" Foreground="#475569" FontWeight="SemiBold" FontSize="12" Margin="5,0,0,5"/>
                        <Border CornerRadius="15" Background="#F1F5F9" Padding="15,0" Margin="0,0,0,8" BorderThickness="1" BorderBrush="#E2E8F0">
                            <Grid>
                                <PasswordBox x:Name="txtPassword" Height="45" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14"/>
                                <TextBox x:Name="txtPasswordVisible" Height="45" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Visibility="Collapsed" FontSize="14"/>
                                <Button x:Name="btnShowPassword" Content="👁" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Cursor="Hand" Width="35" Foreground="#64748B" FontSize="16"
                                        PreviewMouseLeftButtonDown="btnShowPassword_PreviewMouseLeftButtonDown"
                                        PreviewMouseLeftButtonUp="btnShowPassword_PreviewMouseLeftButtonUp"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="Quên mật khẩu?" Foreground="#2E78A6" FontSize="12" HorizontalAlignment="Right" Cursor="Hand" Margin="0,0,5,25" MouseLeftButtonUp="txtForgotPassword_Click" FontWeight="SemiBold"/>

                        <Button Content="VÀO HỆ THỐNG" Style="{StaticResource PrimaryBtn}" Click="BtnLogin_Click" IsDefault="True" Margin="0,0,0,12"/>
                        <Button Content="THOÁT ỨNG DỤNG" Style="{StaticResource SecondaryBtn}" Click="BtnCancel_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>