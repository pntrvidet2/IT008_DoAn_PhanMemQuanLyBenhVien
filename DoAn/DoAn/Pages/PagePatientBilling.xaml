<Page x:Class="DoAn.Pages.PagePatientBilling"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Billing">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="DANH SÁCH HÓA ĐƠN" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <DataGrid x:Name="dgBills"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã" Binding="{Binding Bill_ID}" Width="90"/>
                <DataGridTextColumn Header="Ngày" Binding="{Binding Date}" Width="140"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding Total}" Width="120"/>
                <DataGridTextColumn Header="Phương thức" Binding="{Binding Payment_Method}" Width="150"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Payment_Status}" Width="120"/>
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding Emp_ID}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
