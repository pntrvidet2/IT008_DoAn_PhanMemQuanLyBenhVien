<Page x:Class="DoAn.Pages.PagePatientProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Profile" Background="#FBFBFB"
      FontFamily="Segoe UI Semilight">
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0,12,0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1.5" Background="White">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" Margin="2,0,2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F2F2F2"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#777777"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A90E2"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder" CornerRadius="19" Background="#4A90E2" Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btnBorder" Property="Background" Value="#D1D1D1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,30">
            <TextBlock Text="Thông Tin Bệnh Nhân" FontSize="26" FontFamily="Segoe UI Semibold" Foreground="#2C3E50"/>
            <Border Height="4" Background="#4A90E2" CornerRadius="2" HorizontalAlignment="Left" Width="60" Margin="2,8,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Mã bệnh nhân" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="txtPatientId" IsReadOnly="True" FontWeight="SemiBold"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Họ và tên" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="txtName" IsReadOnly="True"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <ComboBox  Grid.Row="2" Grid.Column="1" x:Name="cbGender" IsEnabled="False" Height="38" VerticalContentAlignment="Center">
                <ComboBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Ngày sinh" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <DatePicker Grid.Row="3" Grid.Column="1" x:Name="dpDOB" IsEnabled="False" Height="38" VerticalContentAlignment="Center"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Số điện thoại" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <TextBox   Grid.Row="4" Grid.Column="1" x:Name="txtPhone" IsReadOnly="True"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Số CCCD" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <TextBox   Grid.Row="5" Grid.Column="1" x:Name="txtCID" IsReadOnly="True"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Địa chỉ liên lạc" VerticalAlignment="Center" Foreground="#5D6D7E" FontSize="14"/>
            <TextBox   Grid.Row="6" Grid.Column="1" x:Name="txtAddress" IsReadOnly="True"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button x:Name="btnEdit" Content="Cập nhật hồ sơ" Width="180" Height="38" Margin="0,0,15,0"
                    Click="btnEdit_Click"/>
            <Button x:Name="btnSave" Content="Lưu thay đổi" Width="120" Height="38" IsEnabled="False"
                    Click="btnSave_Click" Background="#27AE60"/>
        </StackPanel>
    </Grid>
</Page>