<Window x:Class="DoAn.Pages.PaymentQRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thanh toán" Height="695" Width="420" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Border Background="White" CornerRadius="30" Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.15" Direction="-90" ShadowDepth="2"/>
        </Border.Effect>
        <StackPanel Margin="25">
            <TextBlock Text="PHƯƠNG THỨC THANH TOÁN" FontSize="16" FontWeight="Bold" Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <UniformGrid Columns="2" Margin="0,0,0,20">
                <RadioButton x:Name="rbMomo" IsChecked="True" Checked="PayMethod_Changed" GroupName="Pay">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border" Background="#F8FAFC" CornerRadius="15" BorderThickness="2" BorderBrush="Transparent" Margin="5" Padding="10" Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center">
                                    <Image Source="https://img.mservice.io/app/img/logos/momo_square_pink.png" Width="35" Height="35" Margin="0,0,0,5"/>
                                    <TextBlock Text="Ví MoMo" FontSize="12" FontWeight="SemiBold" Foreground="#64748B"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#A50064"/>
                                    <Setter TargetName="border" Property="Background" Value="#FFF0F6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>

                <RadioButton x:Name="rbBank" Checked="PayMethod_Changed" GroupName="Pay">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border" Background="#F8FAFC" CornerRadius="15" BorderThickness="2" BorderBrush="Transparent" Margin="5" Padding="10" Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center">
                                    <Image Source="https://www.bidv.com.vn/wps/wcm/connect/007137f8-3e98-4228-a664-df839352e043/logo-bidv.png?MOD=AJPERES" Width="35" Height="30" Margin="0,0,0,5" Stretch="Uniform"/>
                                    <TextBlock Text="BIDV Bank" FontSize="12" FontWeight="SemiBold" Foreground="#64748B"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#2E78A6"/>
                                    <Setter TargetName="border" Property="Background" Value="#F0F9FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
            </UniformGrid>

            <Border BorderBrush="#F1F5F9" BorderThickness="2" CornerRadius="20" Padding="10" Background="White">
                <Image x:Name="imgQR" Width="260" Height="260" Stretch="Uniform"/>
            </Border>

            <StackPanel Margin="0,15,0,15">
                <TextBlock x:Name="txtAmountDisplay" FontSize="26" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtBillDesc" FontSize="11" Foreground="#94A3B8" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="10,5,10,0"/>
                <TextBlock x:Name="txtStatus" Text="Đang chờ quét mã..." FontSize="13" FontStyle="Italic" Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Button x:Name="btnConfirm" Content="XÁC NHẬN ĐÃ CHUYỂN" Height="50" Foreground="White" FontWeight="Bold" Click="btnConfirm_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="#2E78A6" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E293B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Hủy bỏ giao dịch" Margin="0,10,0,0" Background="Transparent" BorderThickness="0" Foreground="#94A3B8" Click="btnClose_Click"/>
        </StackPanel>
    </Border>
</Window>