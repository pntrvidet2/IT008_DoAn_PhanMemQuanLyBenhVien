<Window x:Class="DoAn.Pages.ResetPassMoiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi mật khẩu" Height="480" Width="400" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="30" Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.2" Direction="-90"/>
        </Border.Effect>

        <StackPanel Margin="30">
            <TextBlock Text="ĐỔI MẬT KHẨU MỚI" FontSize="20" FontWeight="Bold" 
                       Foreground="#2E78A6" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <TextBlock Text="Mật khẩu mới" Foreground="#64748B" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtNewPass" Height="45">
                <PasswordBox.Template>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="12" BorderBrush="#CBD5E1" BorderThickness="1.5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="8,0" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>
            <TextBlock Text="* Mật khẩu phải có ít nhất 6 ký tự" Foreground="#94A3B8" 
                       FontSize="11" Margin="5,5,0,0" FontStyle="Italic"/>

            <TextBlock Text="Xác nhận mật khẩu" Foreground="#64748B" Margin="0,20,0,5"/>
            <PasswordBox x:Name="txtConfirmPass" Height="45">
                <PasswordBox.Template>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="12" BorderBrush="#CBD5E1" BorderThickness="1.5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="8,0" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </PasswordBox.Template>
            </PasswordBox>

            <TextBlock x:Name="txtError" Text="" Foreground="#EF4444" FontSize="13" 
                       HorizontalAlignment="Center" Margin="0,15,0,0" FontWeight="SemiBold" TextWrapping="Wrap"/>

            <Button Content="CẬP NHẬT" Height="50" Margin="0,25,0,0" Background="#2E78A6" 
                    Foreground="White" FontWeight="Bold" Click="btnSave_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#246085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Để sau" Margin="0,15,0,0" Background="Transparent" 
                    Foreground="#94A3B8" Click="btnCancel_Click" Cursor="Hand" BorderThickness="0"/>
        </StackPanel>
    </Border>
</Window>