<Window x:Class="DoAn.RegisterPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký Tài Khoản Bệnh Nhân" Height="740" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernInputStyle" TargetType="Control">
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border x:Name="border" CornerRadius="8" BorderBrush="#DADCE0" BorderThickness="1.5" Background="White">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E78A6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryActionBtn" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EyeBtnStyle" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DADCE0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Margin="20" CornerRadius="25" Background="#F8FBFF">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.3" ShadowDepth="2" Color="Gray"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- Title bar -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,10,0">
                    <Button Content="—" Style="{StaticResource WindowControlBtn}" Click="btnMinimize_Click"/>
                    <Button x:Name="btnMax" Content="▢" Style="{StaticResource WindowControlBtn}" Click="btnMaximize_Click"/>
                    <Button Content="✕" Style="{StaticResource WindowControlBtn}" Click="btnExit_Click" Foreground="#E53935"/>
                </StackPanel>
            </Grid>

            <!-- Left content -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="60,0,60,30">
                <TextBlock Text="ĐĂNG KÝ TÀI KHOẢN BỆNH NHÂN" FontSize="28" FontWeight="Black"
                           Foreground="#2E78A6" Margin="0,0,0,16"/>

                <!-- Username + AccType -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tên đăng nhập *" Foreground="#666" Margin="5,0,0,5"/>
                        <TextBox x:Name="txtRegUser" Style="{StaticResource ModernInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Loại tài khoản" Foreground="#666" Margin="5,0,0,5"/>
                        <TextBox x:Name="txtAccType"
                                 Style="{StaticResource ModernInputStyle}"
                                 Text="PT003"
                                 IsReadOnly="True"
                                 Background="#F0F0F0"
                                 Foreground="#666"
                                 Cursor="Arrow"/>
                    </StackPanel>
                </Grid>

                <!-- CID -->
                <StackPanel Margin="0,5">
                    <TextBlock Text="Số CCCD (CID) *" Foreground="#666" Margin="5,0,0,5"/>
                    <TextBox x:Name="txtRegCID"
                             Style="{StaticResource ModernInputStyle}"
                             MaxLength="12"
                             TextChanged="txtRegCID_TextChanged"/>
                </StackPanel>

                <!-- Auto patient info -->
                <Border Margin="0,10,0,0" Padding="12" CornerRadius="10"
                        Background="#FFFFFF" BorderBrush="#DADCE0" BorderThickness="1.5">
                    <StackPanel>
                        <TextBlock Text="Thông tin hồ sơ (tự lấy theo CCCD)" FontWeight="Bold"
                                   Foreground="#2E78A6" Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="34"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Mã BN:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFoundPatientId" IsReadOnly="True" Background="#F2F2F2"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Họ tên:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtFoundName" IsReadOnly="True" Background="#F2F2F2"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ngày sinh:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtFoundDob" IsReadOnly="True" Background="#F2F2F2"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="SĐT:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtFoundPhone" IsReadOnly="True" Background="#F2F2F2"/>
                        </Grid>

                        <TextBlock x:Name="txtCIDStatus" Margin="0,8,0,0" Foreground="#E53935"/>
                    </StackPanel>
                </Border>

                <!-- Password + Confirm + show/hide -->
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mật khẩu *" Foreground="#666" Margin="5,0,0,5"/>
                        <Grid>
                            <PasswordBox x:Name="txtRegPass" Height="38" Padding="12,0" VerticalContentAlignment="Center"
                                         PasswordChanged="txtRegPass_PasswordChanged"/>
                            <TextBox x:Name="txtRegPassVisible" Height="38" Padding="12,0" VerticalContentAlignment="Center"
                                     Visibility="Collapsed" TextChanged="txtRegPassVisible_TextChanged"/>
                        </Grid>
                    </StackPanel>

                    <Button Grid.Column="2" Content="👁" Style="{StaticResource EyeBtnStyle}" Margin="0,23,0,0"
                            Click="btnTogglePass_Click"/>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Xác nhận mật khẩu *" Foreground="#666" Margin="5,0,0,5"/>
                        <Grid>
                            <PasswordBox x:Name="txtRegConfirmPass" Height="38" Padding="12,0" VerticalContentAlignment="Center"
                                         PasswordChanged="txtRegConfirmPass_PasswordChanged"/>
                            <TextBox x:Name="txtRegConfirmPassVisible" Height="38" Padding="12,0" VerticalContentAlignment="Center"
                                     Visibility="Collapsed" TextChanged="txtRegConfirmPassVisible_TextChanged"/>
                        </Grid>
                    </StackPanel>

                    <Button Grid.Column="6" Content="👁" Style="{StaticResource EyeBtnStyle}" Margin="0,23,0,0"
                            Click="btnToggleConfirmPass_Click"/>
                </Grid>
            </StackPanel>

            <!-- Right panel -->
            <Border Grid.Row="1" Grid.Column="1" Background="#2E78A6" CornerRadius="0,0,25,0">
                <StackPanel VerticalAlignment="Center">
                    <Button Content="ĐĂNG KÝ NGAY" Click="btnDoRegister_Click" Margin="25,10" Height="55"
                            Background="White" Foreground="#2E78A6" Style="{StaticResource PrimaryActionBtn}"/>

                    <Button Content="QUAY LẠI" Click="btnExit_Click" Margin="25,10" Height="45"
                            Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1.5"
                            Style="{StaticResource PrimaryActionBtn}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
