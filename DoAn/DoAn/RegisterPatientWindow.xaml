<Window x:Class="DoAn.RegisterPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký Bệnh Nhân" Height="780" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernInput" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="15,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2E78A6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" 
                                CornerRadius="22" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="20" CornerRadius="30" Background="#F8FAFC">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Opacity="0.1" ShadowDepth="0" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="2" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Button Content="—" Background="Transparent" BorderThickness="0" Width="40" Click="btnMinimize_Click" Foreground="#64748B"/>
                    <Button Content="✕" Background="Transparent" BorderThickness="0" Width="40" Click="btnExit_Click" Foreground="#EF4444" FontSize="16"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="60,10,60,30">
                <TextBlock Text="ĐĂNG KÝ THÀNH VIÊN" FontSize="30" FontWeight="Black" Foreground="#2E78A6" Margin="0,0,0,5"/>
                <TextBlock Text="Vui lòng thực hiện các bước để tạo tài khoản mới." Foreground="#94A3B8" Margin="0,0,0,25"/>

                <TextBlock Text="1. Số CCCD hồ sơ *" Foreground="#475569" FontWeight="SemiBold" Margin="10,0,0,5"/>
                <Border Style="{StaticResource ModernInput}" Margin="0,0,0,5">
                    <TextBox x:Name="txtRegCID" BorderThickness="0" Height="40" VerticalContentAlignment="Center" Background="Transparent" TextChanged="txtRegCID_TextChanged"/>
                </Border>
                <TextBlock x:Name="txtCIDStatus" Margin="15,0,0,15" FontSize="11" Text="Nhập CCCD để hệ thống kiểm tra hồ sơ." Foreground="#94A3B8" FontStyle="Italic"/>


                <Border x:Name="brdProfile" Background="#F1F5F9" CornerRadius="20" Padding="15" Margin="0,5,0,20" BorderBrush="#E2E8F0" BorderThickness="1.5">
                    <Grid>
                        <TextBlock x:Name="txtGuide" Text="🔍 Đang đợi nhập số CCCD để lấy hồ sơ..." Foreground="#94A3B8" FontStyle="Italic" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <UniformGrid x:Name="gridProfile" Columns="2" Rows="2" Opacity="0.1">
                            <StackPanel Margin="5">
                                <TextBlock Text="Họ Tên:" FontSize="10" Foreground="#64748B" FontWeight="Bold"/>
                                <TextBox x:Name="txtFoundName" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontWeight="Black" FontSize="14" Foreground="#1E293B"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Mã Bệnh Nhân:" FontSize="10" Foreground="#64748B" FontWeight="Bold"/>
                                <TextBox x:Name="txtFoundPatientId" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontWeight="Black" FontSize="14" Foreground="#1E293B"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Số Điện Thoại:" FontSize="10" Foreground="#64748B" FontWeight="Bold"/>
                                <TextBox x:Name="txtFoundPhone" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontWeight="Black" FontSize="14" Foreground="#1E293B"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Trạng thái:" FontSize="10" Foreground="#64748B" FontWeight="Bold"/>
                                <TextBox x:Name="txtFoundDob" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontWeight="Black" FontSize="14" Foreground="#1E293B"/>
                            </StackPanel>
                        </UniformGrid>
                    </Grid>
                </Border>

                <TextBlock Text="2. Email của bạn *" Foreground="#475569" FontWeight="SemiBold" Margin="10,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Style="{StaticResource ModernInput}" Margin="0,0,10,0">
                        <TextBox x:Name="txtRegUser" BorderThickness="0" Height="40" VerticalContentAlignment="Center" Background="Transparent"/>
                    </Border>
                    <Button Grid.Column="1" x:Name="btnSendOTP" Content="GỬI MÃ OTP" Style="{StaticResource PrimaryBtn}" Background="#F59E0B" Foreground="White" Height="45" Click="btnSendOTP_Click"/>
                </Grid>

                <TextBlock Text="3. Tạo mật khẩu *" Foreground="#475569" FontWeight="SemiBold" Margin="10,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource ModernInput}">
                        <Grid>
                            <PasswordBox x:Name="txtRegPass" BorderThickness="0" Height="40" VerticalContentAlignment="Center" Background="Transparent"/>
                            <TextBox x:Name="txtRegPassVisible" BorderThickness="0" Height="40" VerticalContentAlignment="Center" Visibility="Collapsed" Background="Transparent"/>
                            <Button Content="👁" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Width="30" Click="btnTogglePass_Click" Cursor="Hand" Foreground="#94A3B8"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource ModernInput}">
                        <PasswordBox x:Name="txtRegConfirmPass" BorderThickness="0" Height="40" VerticalContentAlignment="Center" Background="Transparent"/>
                    </Border>
                </Grid>
            </StackPanel>

            <Border Grid.Column="1" Grid.Row="1" Background="#2E78A6" CornerRadius="0,0,30,0">
                <StackPanel VerticalAlignment="Center" Margin="30">
                    <TextBlock Text="🏥" FontSize="60" HorizontalAlignment="Center" Foreground="White" Opacity="0.5" Margin="0,0,0,20"/>
                    <TextBlock Text="HƯỚNG DẪN" Foreground="White" FontWeight="Bold" Margin="0,0,0,15" FontSize="14"/>

                    <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap" Opacity="0.9" LineHeight="22">
                        • Nhập đúng CCCD để khớp hồ sơ bệnh viện.<LineBreak/>
                        • Hệ thống sẽ chặn nếu hồ sơ đã có tài khoản.<LineBreak/>
                        • Email phải xác thực OTP mới được đăng ký.<LineBreak/>
                        • Mật khẩu nên bảo mật và dễ nhớ.
                    </TextBlock>

                    <Button Content="HOÀN TẤT ĐĂNG KÝ" Margin="0,40,0,0" Style="{StaticResource PrimaryBtn}" Height="60" Click="btnDoRegister_Click" Background="White" Foreground="#2E78A6"/>
                    <Button Content="QUAY LẠI" Click="btnExit_Click" Background="Transparent" BorderBrush="White" BorderThickness="1.5" Foreground="White" Margin="0,15,0,0" Height="40" Style="{StaticResource PrimaryBtn}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>