<Window x:Class="DoAn.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CHỌN VAI TRÒ ĐĂNG NHẬP"
        Height="420" Width="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#2E78A6"/>

        <!-- Top button -->
        <Style x:Key="TopBtn" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Role card -->
        <Style x:Key="RoleCard" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                                Background="White"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="42"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Border Width="36" Height="36"
                                        CornerRadius="10"
                                        Background="#EEF6FF"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                    <ContentPresenter/>
                                </Border>

                                <!-- Text -->
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="{TemplateBinding Tag}"
                                               FontWeight="Bold"
                                               FontSize="15"
                                               Foreground="#111827"/>
                                    <TextBlock Text="{TemplateBinding ToolTip}"
                                               Foreground="#6B7280"
                                               FontSize="12"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#93C5FD"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2E78A6"/>
                                <Setter TargetName="Bd" Property="Background" Value="#F6FBFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SoftBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="#EEF2F7"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="White"
            BorderBrush="{StaticResource Primary}"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- TOP BAR -->
            <Border Grid.Row="0"
                    Background="{StaticResource Primary}"
                    CornerRadius="18,18,0,0"
                    MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="CHỌN VAI TRÒ ĐĂNG NHẬP"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- Window buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="—"
                                Style="{StaticResource TopBtn}"
                                Click="BtnMinimize_Click"/>

                        <Button x:Name="BtnMax"
                                Content="□"
                                FontSize="18"
                                Style="{StaticResource TopBtn}"
                                Click="BtnMaximize_Click"/>

                        <Button Content="✕"
                                Style="{StaticResource TopBtn}"
                                Click="BtnClose_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <Grid Grid.Row="1" Margin="24,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- LEFT -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <RadioButton x:Name="rbDataEntry"
                                 GroupName="role"
                                 Style="{StaticResource RoleCard}"
                                 Tag="Nhân viên nhập liệu"
                                 ToolTip="Thêm dữ liệu thuốc, bệnh nhân, hóa đơn">
                        <TextBlock Text="⌨️" FontSize="18"/>
                    </RadioButton>

                    <RadioButton x:Name="rbDoctor"
                                 GroupName="role"
                                 Style="{StaticResource RoleCard}"
                                 Tag="Bác sĩ"
                                 ToolTip="Khám bệnh, chỉ định, hồ sơ">
                        <TextBlock Text="👨‍⚕️" FontSize="18"/>
                    </RadioButton>

                    <RadioButton x:Name="rbPatient"
                                 GroupName="role"
                                 Style="{StaticResource RoleCard}"
                                 Tag="Bệnh nhân"
                                 ToolTip="Hồ sơ cá nhân, danh sách hóa đơn">
                        <TextBlock Text="👤" FontSize="18"/>
                    </RadioButton>
                </StackPanel>

                <!-- RIGHT -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <RadioButton x:Name="rbHR"
                                 GroupName="role"
                                 Style="{StaticResource RoleCard}"
                                 Tag="Quản lý nhân sự"
                                 ToolTip="Nhân viên, khoa, lương">
                        <TextBlock Text="🗂️" FontSize="18"/>
                    </RadioButton>

                    <RadioButton x:Name="rbAdmin"
                                 GroupName="role"
                                 Style="{StaticResource RoleCard}"
                                 Tag="Admin"
                                 ToolTip="Quản trị và phân quyền">
                        <TextBlock Text="🛡️" FontSize="18"/>
                    </RadioButton>
                </StackPanel>
            </Grid>

            <!-- FOOTER -->
            <Grid Grid.Row="2" Margin="24,0,24,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Hủy"
                        Width="110"
                        Margin="0,0,10,0"
                        Style="{StaticResource SoftBtn}"
                        Click="BtnCancel_Click"/>

                <Button Grid.Column="2"
                        Content="Tiếp tục"
                        Width="140"
                        Style="{StaticResource PrimaryBtn}"
                        Click="BtnContinue_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
