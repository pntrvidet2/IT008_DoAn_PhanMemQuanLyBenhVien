<Window x:Class="DoAn.Windows.UpdateExamFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phiếu Khám" Height="580" Width="480" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterOwner">
    <Border Background="White" CornerRadius="20" Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.1"/>
        </Border.Effect>
        <StackPanel Margin="25">
            <TextBlock Text="THÔNG TIN PHIẾU KHÁM" FontSize="20" FontWeight="Bold" Foreground="#0369A1" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,0,5,0">
                    <TextBlock Text="Mã Phiếu (Tự động)" Foreground="#64748B" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtFormID" Height="35" IsReadOnly="True" Background="#F1F5F9" Padding="10,5">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="#CBD5E1" BorderThickness="1">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Chọn Bệnh Nhân" Foreground="#64748B" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cboPatient" Height="35" DisplayMemberPath="Patient_Name" SelectedValuePath="Patient_ID">
                    </ComboBox>
                </StackPanel>
            </Grid>

            <TextBlock Text="Triệu chứng" Foreground="#64748B" Margin="0,15,0,5"/>
            <TextBox x:Name="txtSymptom" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="10">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" BorderBrush="#CBD5E1" BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

            <TextBlock Text="Kết luận" Foreground="#64748B" Margin="0,10,0,5"/>
            <TextBox x:Name="txtConclusion" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="10">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" BorderBrush="#CBD5E1" BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

            <Grid Margin="0,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="HỦY" Margin="5" Height="40" Background="#F1F5F9" Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="LƯU PHIẾU" Margin="5" Height="40" Background="#0369A1" Foreground="White" FontWeight="Bold" Click="Save_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>