<Window x:Class="DoAn.Windows.UpdateMonitoringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phiếu Theo Dõi" Height="520" Width="480" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterOwner">
    <Border Background="White" CornerRadius="20" Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.1"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="PHIẾU THEO DÕI BỆNH NHÂN" FontSize="20" FontWeight="Bold" 
                       Foreground="#0D9488" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Mã Phiếu" Foreground="#64748B" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtMoniID" Height="38" IsReadOnly="True" Background="#F1F5F9" Padding="10,0" VerticalContentAlignment="Center">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="#CBD5E1" BorderThickness="1">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Bệnh Nhân" Foreground="#64748B" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cboPatient" Height="38" VerticalContentAlignment="Center" 
                                  DisplayMemberPath="Patient_Name" SelectedValuePath="Patient_ID"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Tình trạng theo dõi / Ghi chú" Foreground="#64748B" Margin="0,15,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="txtCondition" Height="180" TextWrapping="Wrap" AcceptsReturn="True" Padding="10" VerticalScrollBarVisibility="Auto">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border CornerRadius="10" BorderBrush="#CBD5E1" BorderThickness="1" Background="White">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="HỦY BỎ" Margin="5" Height="42" Background="#F1F5F9" 
                        Foreground="#64748B" FontWeight="SemiBold" Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#E2E8F0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="LƯU THÔNG TIN" Grid.Column="1" Margin="5" Height="42" 
                        Background="#0D9488" Foreground="White" FontWeight="Bold" Click="Save_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#0F766E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>