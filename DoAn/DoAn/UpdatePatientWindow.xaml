<Window x:Class="DoAn.Windows.UpdatePatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CẬP NHẬT THÔNG TIN BỆNH NHÂN" 
        Height="650" Width="520"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="Margin" Value="5,0,0,5"/>
        </Style>

        <Style x:Key="InputContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="InputIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,10,0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#2E78A6" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="CẬP NHẬT BỆNH NHÂN" FontSize="20" FontWeight="ExtraBold" Foreground="#1F2937"/>
                </StackPanel>
                <Border Height="3" Width="50" Background="#2E78A6" HorizontalAlignment="Left" Margin="35,5,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Mã bệnh nhân" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource InputContainer}" Background="#F9FAFB">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                                    <TextBox x:Name="txtId" IsReadOnly="True" Width="170"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Giới tính" Style="{StaticResource FieldLabel}"/>
                            <Border Style="{StaticResource InputContainer}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                                    <ComboBox x:Name="cbGender" BorderThickness="0" Background="Transparent" Height="35" Width="165" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Male"/>
                                        <ComboBoxItem Content="Female"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Họ tên (*)" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                            <TextBox x:Name="txtName" Width="400"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Bác sĩ phụ trách" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                            <ComboBox x:Name="cbDoctor" Width="385" Height="35" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Số điện thoại (*)" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                            <TextBox x:Name="txtPhone" Width="400"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Số định danh (CCCD)" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                            <TextBox x:Name="txtCID" Width="400"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Địa chỉ" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" Style="{StaticResource InputIcon}"/>
                            <TextBox x:Name="txtAddress" Width="400"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Tình trạng hiện tại" Style="{StaticResource FieldLabel}"/>
                    <Border Style="{StaticResource InputContainer}" Height="100" Padding="8,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                            <TextBlock Text="" Style="{StaticResource InputIcon}" Margin="5,8,10,0"/>
                            <TextBox x:Name="txtCondition" TextWrapping="Wrap" AcceptsReturn="True" Width="380" Height="Auto"/>
                        </StackPanel>
                    </Border>

                    <TextBlock x:Name="txtError" Foreground="#EF4444" FontSize="12" Margin="5,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Hủy bỏ" Width="100" Height="38" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#6B7280" Click="Cancel_Click" Margin="0,0,12,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Cập nhật" Width="130" Height="38" Background="#2E78A6" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="Save_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>