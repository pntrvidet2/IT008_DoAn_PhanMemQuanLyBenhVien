<Window x:Class="DoAn.Windows.UpdateStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập nhật tài khoản" Height="550" Width="400" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        WindowStartupLocation="CenterOwner">
    <Border Background="White" CornerRadius="20" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.2"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="CẬP NHẬT TÀI KHOẢN" FontSize="20" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Mã tài khoản (Cố định)" Foreground="#94A3B8" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAccID" Height="38" IsEnabled="False" Background="#F1F5F9" VerticalContentAlignment="Center" Padding="10,0" Margin="0,0,0,15">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="#CBD5E1" BorderThickness="1">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <TextBlock Text="Tên đăng nhập" Foreground="#64748B" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUser" Height="38" VerticalContentAlignment="Center" Padding="10,0" Margin="0,0,0,15">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border CornerRadius="10" BorderBrush="#CBD5E1" BorderThickness="1">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <TextBlock Text="Mật khẩu" Foreground="#64748B" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPass" Height="38" VerticalContentAlignment="Center" Padding="10,0" Margin="0,0,0,15">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border CornerRadius="10" BorderBrush="#CBD5E1" BorderThickness="1">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <TextBlock Text="Loại tài khoản" Foreground="#64748B" Margin="0,0,0,5"/>
                <ComboBox x:Name="cboRole" Height="38" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="Trạng thái" Foreground="#64748B" Margin="0,0,0,5"/>
                <ComboBox x:Name="cboStatus" Height="38" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Locked"/>
                </ComboBox>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="ĐÓNG" Grid.Column="0" Margin="5" Height="40" Background="#F1F5F9" Foreground="#64748B" Click="Cancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="CẬP NHẬT" Grid.Column="1" Margin="5" Height="40" Background="#F59E0B" Foreground="White" Click="Update_Click" FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>