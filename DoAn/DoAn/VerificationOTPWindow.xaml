<Window x:Class="DoAn.VerificationOTPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xác thực OTP" Height="300" Width="400" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterOwner">
    <Border CornerRadius="25" Background="White" BorderBrush="#2E78A6" BorderThickness="1.5">
        <StackPanel Margin="30">
            <TextBlock Text="XÁC THỰC EMAIL" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2E78A6"/>
            <TextBlock Text="Mã xác thực đã được gửi đến Email của bạn. Vui lòng kiểm tra và nhập vào bên dưới." 
                       FontSize="12" Foreground="#64748B" Margin="0,15" TextAlignment="Center" TextWrapping="Wrap"/>

            <Border CornerRadius="15" Background="#F1F5F9" Padding="10" Margin="0,10">
                <TextBox x:Name="txtOTP" FontSize="28" FontWeight="Bold" HorizontalContentAlignment="Center" 
                         BorderThickness="0" Background="Transparent" MaxLength="6" Foreground="#1E293B"/>
            </Border>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="HỦY" Click="btnCancel_Click" Margin="5" Height="40" Background="#F1F5F9" Foreground="#64748B" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Grid.Column="1" Content="XÁC NHẬN" Click="btnConfirm_Click" Margin="5" Height="40" Background="#2E78A6" Foreground="White" FontWeight="Bold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>